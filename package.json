{
  "name": "hmpps-video-conference-schedule-ui",
  "version": "0.0.1",
  "description": "Hmpps Video Conference Schedule UI",
  "repository": "git@github.com:ministryofjustice/hmpps-video-conference-schedule-ui.git",
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "compile-assets": "grunt",
    "watch-node": "nodemon --ignore '*.test.ts' -r dotenv/config ./server.ts",
    "watch-assets": "npm run build:dev && grunt watch",
    "build": "npm run compile-assets && tsc",
    "build:dev": "npx grunt clean-dev-build",
    "start": "node $NODE_OPTIONS dist/server.js | bunyan -o short",
    "start:dev": "NODE_ENV=live-development concurrently --kill-signal=SIGKILL -k -p \"[{name}]\" -n \"TypeScript,Assets\" -c \"green.bold,blue.bold\" \"npm run watch-node\" \"npm run watch-assets\"",
    "start-feature": "export $(cat feature.env) && $(wiremock --port 9091 --root-dir integration_tests >> /dev/null &) && node $NODE_DEBUG_OPTION dist/server.js | bunyan -o short",
    "start-feature:dev": "export $(cat feature.env) && $(wiremock --port 9091 --root-dir integration_tests >> /dev/null &) && npm run start:dev",
    "lint": "eslint . --cache --max-warnings 0",
    "lint:fix": "eslint . --cache --max-warnings 0 --fix",
    "typecheck": "tsc && tsc -p integration_tests",
    "test": "NODE_ENV=unit-test TZ=utc NODE_OPTIONS=--experimental-vm-modules jest --runInBand --detectOpenHandles --collectCoverage=true --testPathPattern='(server|frontend)/.*'",
    "security_audit": "better-npm-audit audit",
    "int-test": "cypress run --config video=false",
    "int-test-ui": "cypress open",
    "clean": "rm -rf dist assets build node_modules stylesheets"
  },
  "engines": {
    "node": "^22",
    "npm": "^10"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "isolatedModules": true
        }
      ]
    },
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/(server|job)/**/?(*.)(cy|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "migrations/*",
      "node_modules/*",
      "test/*",
      "integration_tests/*"
    ],
    "delay": 2500,
    "ext": "js,json,html,njk"
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.696.0",
    "@ministryofjustice/frontend": "^3.0.3",
    "@ministryofjustice/hmpps-monitoring": "^0.0.1-beta.2",
    "agentkeepalive": "^4.5.0",
    "applicationinsights": "^2.9.6",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.7.5",
    "connect-flash": "^0.1.1",
    "connect-redis": "^7.1.1",
    "csrf-sync": "^4.0.3",
    "date-fns": "^4.1.0",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "govuk-frontend": "^5.7.1",
    "helmet": "^8.0.0",
    "http-errors": "^2.0.0",
    "json-2-csv": "^5.5.7",
    "jwt-decode": "^4.0.0",
    "lodash": "^4.17.21",
    "nocache": "^4.0.0",
    "nunjucks": "^3.2.4",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.2",
    "superagent": "^10.1.1",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@ministryofjustice/eslint-config-hmpps": "^0.0.1-beta.1",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@tsconfig/node22": "^22.0.0",
    "@types/bunyan": "^1.8.11",
    "@types/bunyan-format": "^0.2.9",
    "@types/cheerio": "^0.22.35",
    "@types/compression": "^1.7.5",
    "@types/connect-flash": "0.0.40",
    "@types/express-session": "^1.18.0",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.8.2",
    "@types/nunjucks": "^3.2.6",
    "@types/passport": "^1.0.17",
    "@types/passport-oauth2": "^1.4.17",
    "@types/sinon": "^17.0.3",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "aws-sdk-client-mock": "^4.1.0",
    "axe-core": "^4.10.2",
    "better-npm-audit": "^3.11.0",
    "cheerio": "^1.0.0",
    "concurrently": "^9.1.0",
    "cypress": "^13.16.0",
    "cypress-axe": "^1.5.0",
    "cypress-multi-reporters": "^2.0.4",
    "dotenv": "^16.4.5",
    "grunt": "^1.6.1",
    "grunt-contrib-clean": "^2.0.1",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-sass": "^2.0.0",
    "grunt-contrib-uglify": "^5.2.2",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-rollup": "^12.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "jest-junit": "^16.0.0",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^15.2.10",
    "mocha-junit-reporter": "^2.2.1",
    "nock": "^13.5.6",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "prettier-plugin-jinja-template": "^2.0.0",
    "sass": "^1.81.0",
    "sinon": "^19.0.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3",
    "wiremock": "^3.9.2"
  }
}
